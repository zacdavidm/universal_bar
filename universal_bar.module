function universal_bar_page_alter(&$page){
	$account_in_out;
	$account_user="";;
	if(user_is_logged_in()){
		$account_user='<li><a href="https://forgoodinc.pairsite.com/user">Account</a></li>';
		$account_in_out='<a href="https://forgoodinc.pairsite.com/user/logout">Sign Out</a>';
	}else{
		$account_in_out='<a href="https://forgoodinc.pairsite.com/user/login">Sign In</a>';
	}
	$sites_list='
	<div class="display-panel">
		<ul class="sites-list menu">
			<li><a href="http://forgoodstudios.org">Forgood Studios</a></li>
			<li><a href="http://housing.forgoodstudios.org">Forgood Housing</a></li>
			<li><a href="http://reddit.com/r/forgoodideas">Forgood Ideas</a></li>
			<li><a href="http://forgoodinc.pairsite.com">Forgood Accounts</a></li>
			<li><a href="http://redjacketarts.com">Redjacket Arts</a></li>
		</ul>
	</div>';
	$notifications='<div class="display-panel" id="notifications"></div>';
