<?php

function universal_bar_page_alter(&$page){
	$account_in_out;
	if(user_is_logged_in()){
		$account_in_out='<a href="https://forgoodinc.pairsite.com/user/logout">Sign Out</a>';
	}else{
		$account_in_out='<a href="https://forgoodinc.pairsite.com/user/login">Sign In</a>';
	}
    $page['page_top']['universal_bar']=array(
    '#markup'=>
    '<div class="universal-bar">
		<div class="row">
			<div class="right">
				<ul class="menu inline-list">
					<li><a>Sites</a></li>
					<li><a>Notifications</a></li>
					<li>'.$account_in_out.'</li>
				</ul>					
			</div>
		</div>
    </div>',
    '#weight' => 26,
    );

}
