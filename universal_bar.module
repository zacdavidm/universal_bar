    '#markup'=>
    '<div class="universal-bar">
		<div class="row">
			<div class="right">
				<ul class="menu inline-list">
					'.$account_user.'
					<li id="toggle-sites-list"><a title="Sites"><i class="fa fa-th"><span class="element-invisible">Sites</span></i></a>
						'.$sites_list.'
					</li>
					<li id="toggle-notifications"><a title="Notifications"><i class="fa fa-bell"><span class="element-invisible">Notifications</span></i></a>
						'.$notifications.'
